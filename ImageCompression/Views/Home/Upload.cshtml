@{
    ViewBag.Title = "Upload";
}
@section Scripts
{
    <script src="@Url.Content("~/Scripts/upload.js")"></script>
}
<h2 class="page-header">Upload</h2>
<form action="@Url.Action("ProcessUpload", "Home")" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputEmail1">Images</label>
        <input type="file" class="form-control-file" id="img" name="img" aria-describedby="fileHelp" accept="image/*" multiple required>
        <small id="fileHelp" class="form-text text-muted">Valid type: jpg, png, bmg.</small>
    </div>
    <div class="form-group">
        <label for="quality">Quality</label>
        <input type="number" class="form-control" id="quality" name="quality" placeholder="Quality" min="10" max="100">
        <small id="qualityHelp" class="form-text text-muted">Quality in range 10 - 100.</small>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-upload"></i>Upload</button>
</form>
<span>Upload with resize</span>
<form action="@Url.Action("Resize", "Home")" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputEmail1">Images</label>
        <input type="file" class="form-control-file" id="img1" name="img" aria-describedby="fileHelp1" accept="image/*" multiple required>
        <small id="fileHelp1" class="form-text text-muted">Valid type: jpg, png, bmg.</small>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-upload"></i>Upload</button>
</form>
@if (TempData["message"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["message"].ToString()
    </div>
}